---
layout: layouts/layout.njk
---

<script src="//unpkg.com/alpinejs" defer></script>

<div
  class="fixed flex h-16 w-[360px] items-center justify-between bg-white px-4 py-2"
>
  <img class="w-8 fill-black" src="/img/karhu.svg" />
  <img class="w-8 fill-black" src="/img/menu.svg" />
</div>

<img src="https://placehold.co/360x500" />

<div class="flex flex-col p-2">
  <h2 class="text-3xl font-bold">Osoite</h2>

  <h3 class="text-lg font-extrabold">Satakuntalainen Osakunta</h3>
  <p class="ml-6 text-xs font-normal">
    Lapinrinne 1 E1 <br />
    00180 Helsinki <br />
    sato@satakuntatalo.fi <br />
    Y-tunnus: 2593042-3
  </p>

  <h3 class="text-lg font-bold">Osakuntahuoneisto Viisi</h3>
  <p class="ml-6 text-xs font-normal">
    Lapinrinne 1 A5<br />
    00180 Helsinki <br />
  </p>

  <h2 class="text-3xl font-bold">Yhteystiedot</h2>

  <div>
    {% for section in sections %}
    <div x-cloak x-data="{open: false}">
      <div
        @click="open = !open"
        class="flex justify-between border-b-2 border-b-black px-6 py-2 text-lg"
      >
        <h3 class="text-lg font-bold">{{section.name}}</h3>
        <span class="text-lg font-bold">-</span>
      </div>
      <ul x-show="open" class="border-b-2 border-b-black py-2">
        {% for contact in section.contacts %}
        <li class="ml-12">
          <h4 class="text-lg font-bold">{{contact.title}}</h4>
          <p class="text-xs">
            {{contact.names | join(", ")}} <br />
            {{contact.email}} <br />
          </p>
        </li>
        {% endfor %}
      </ul>
    </div>
    {% endfor %}
  </div>
</div>
