{
  "license": "GPL-3.0-or-later",
  "scripts": {
    "eleventy:base": "node -r esbuild-register node_modules/.bin/eleventy",
    "eleventy:build": "yarn eleventy:base --input=src/site",
    "eleventy:dev": "yarn eleventy:base --input=src/site --serve",
    "tailwind:base": "tailwindcss --input src/css/main.css --output _site/main.css",
    "tailwind:build": "yarn tailwind:base --minify",
    "tailwind:dev": "yarn tailwind:base --watch",
    "clean": "rimraf _site/*",
    "build": "run-s -lnc clean '*:build'",
    "dev": "run-p -l '*:dev'",
    "prettier": "prettier --write **/*.{js,ts,njk,html}",
    "prepare": "cd .. && husky install"
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.0",
    "@fullcalendar/core": "^6.0.2",
    "@fullcalendar/google-calendar": "^6.0.0",
    "@types/node": "^20.3.2",
    "axios": "^1.4.0",
    "dotenv": "^16.3.1",
    "eleventy-plugin-i18n": "^0.1.3",
    "esbuild": "^0.16.8",
    "esbuild-register": "^3.4.2",
    "fullcalendar-scheduler": "^6.0.2",
    "i18n": "^0.15.1",
    "npm-run-all": "^4.1.5",
    "preact": "^10.11.3",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "react-big-calendar": "^1.5.2"
  },
  "devDependencies": {
    "get-folder-size": "^4.0.0",
    "husky": "^8.0.3",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.2.4"
  }
}
